---
import Confetti from "../icons/Confetti.astro";
import Spotify from "../icons/Spotify.astro";
import ArrowDown from "../icons/ArrowDown.astro";

export interface Props {
  type: string,
  id: string
}

interface IconsType {
  [key: string]: any
}

const { type = 'confetti', id} = Astro.props;

const Icons: IconsType = {
  spotify: Spotify,
  confetti: Confetti,
  download: ArrowDown
};

const Icon = Icons[type];
---
<button id={id}>
  <Icon />
</button>

<style>
  button {
    position: fixed;
    bottom: 10px;
    right: 10px;
    display: flex;
    border-radius: 8px;
    padding: 8px;
    color: rgb(var(--white));
    border: none;
    background-color: var(--blackish);
    transition: 0.3s all ease-in-out;
  }
  button:hover {
    -webkit-box-shadow: 0px 0px 1px 1px rgba(170,170,170,0.6);
    -moz-box-shadow: 0px 0px 1px 1px rgba(170,170,170,0.6);
    box-shadow: 0px 0px 1px 1px rgba(170,170,170,0.6);
    content: 'hover'
  }
</style>