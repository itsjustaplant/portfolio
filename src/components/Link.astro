---
export interface Props {
  text: string;
  link: string;
}

const { text, link } = Astro.props;
---

<a href={link} target="_blank">
  {text}
  <svg xmlns="http://www.w3.org/2000/svg" width="92" height="92" fill="#ffffff" viewBox="0 0 256 256"><path d="M204,64V168a12,12,0,0,1-24,0V93L72.49,200.49a12,12,0,0,1-17-17L163,76H88a12,12,0,0,1,0-24H192A12,12,0,0,1,204,64Z"></path></svg>
</a>

<style>
  a {
    color: rgb(var(--white));
    font-size: 14px;
    text-decoration: none;
    cursor: pointer;
  }
  :hover {
    text-decoration: underline;
  }
  svg {
    width: 12px;
    height: 12px;
  }
</style>
