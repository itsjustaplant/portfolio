---
import SectionWrapper from "../components/SectionWrapper.astro";
import SubHeader from "../components/SubHeader.astro";
import Link from "../components/Link";

const EducationData = [
  {
    date: "2018 — 2023",
    text: "Hacettepe University - Electrical and Electronics Engineering",
    link: "http://www.ee.hacettepe.edu.tr/",
    description:
      "Learned circuit theory, C, VHDL, signal processing, integrated circuit design and embedded system design.",
  },
  {
    date: "2016 — 2017",
    text: "Grand Valley State University",
    link: "https://www.gvsu.edu/",
    description:
      "Attended to Intensive English Program for Academic Purposes offered by ELS Language Center at Grand Rapids, MI.",
  },
];
---

<SectionWrapper delay={1.5}>
  <Fragment>
    <h2>Education</h2>
    <div class="flex flex-col gap-4">
      {
        EducationData.map(({ date, text, link, description }) => (
          <div class="flex">
            <SubHeader>{date}</SubHeader>
            <div class="flex flex-col">
              <Link href={link}>{text}</Link>
              <p>{description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </Fragment>
</SectionWrapper>
