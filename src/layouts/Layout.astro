---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/plant.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Portfolio website of Alperen Sahin"/>
		<meta http-equiv="Content-Security-Policy" content="script-src https://www.justaplant.dev http://localhost:3002/"/>
		<meta http-equiv="Content-Security-Policy" content="object-src 'none'"/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--white: 255, 255, 255;
		--grey: 170, 170, 170;
		--dark-grey: 153, 153, 153;
		--blackish: #333333;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		width: 100vw;
		height: 100vh;
		padding: 0;
		margin: 0;
		background-color: #212121  ;
	}
</style>
