---

<SectionWrapper delay={1.5}>
  <Fragment>
    <h2>Contact</h2>
    <div>
      {
        ContactData.map(({ website, text, link }) => (
          <div class="flex">
            <SubHeader>{website}</SubHeader>
            <Link href={link}>{text}</Link>
          </div>
        ))
      }
    </div>
  </Fragment>
</SectionWrapper>
