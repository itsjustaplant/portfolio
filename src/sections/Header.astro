---
import Link from "../components/Link";

const Routes = [
  {
    href: "/til",
    text: "T.I.L",
  },
];

const activePath = Astro.url.pathname;
---

<header class="mt-0 ml-auto mr-auto max-w-3xl p-3">
  <div class="flex justify-between items-center">
    <Link
      href="/"
      target="_self"
      className="font-medium my-3"
      size="lg"
      showIcon={false}>justaplant</Link
    >
    <div class="flex justify-center items-center gap-2">
      {
        Routes.map(({ href, text }, index) => (
          <>
            <Link
              href={href}
              target="_self"
              showIcon={false}
              className="hover:!no-underline "
            >
              <span
                class={`leading-4 p-2 rounded hover:shadow-primary transition-all text-primary ${activePath === href ? "bg-tertiary" : "hover:bg-tertiary-30"}`}
              >
                {text}
              </span>
            </Link>
          </>
        ))
      }
    </div>
  </div>
</header>
